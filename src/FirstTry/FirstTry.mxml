<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   backgroundColor="#ABCDEF">
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			protected function answer(event:MouseEvent):void
			{
				Alert.show("I am flying! ");
			}
		]]>
	</fx:Script>
	
	
	<s:VGroup>
		<s:Label text="Hello World! " fontSize="100" />
		<s:Button label="Who are you? " click="answer(event)" />
	</s:VGroup>
		
	
</s:Application>
